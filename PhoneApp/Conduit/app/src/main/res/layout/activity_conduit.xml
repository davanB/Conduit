<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.uwaterloo.fydp.conduit.conduitview.ConduitActivity">

    <ca.uwaterloo.fydp.conduit.conduitview.ConduitListView
        android:id="@+id/conduit_list_view"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <ca.uwaterloo.fydp.conduit.conduitview.ConduitStatusView
        android:id="@+id/conduit_status_view"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <ca.uwaterloo.fydp.conduit.conduitview.ConduitSendView
        android:id="@+id/conduit_send_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


</LinearLayout>
